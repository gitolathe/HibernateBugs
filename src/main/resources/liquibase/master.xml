<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="theSchema" logicalFilePath="master.xml" author="olth">

        <createTable tableName="A1">
            <column name="ID" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="Type" type="char(1)" >
                <constraints nullable="false" />
            </column>
            <column name="SomeText" type="varchar(255)" >
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey columnNames="ID, Type"
                       constraintName="PK_A1_ID_TYPE"
                       tableName="A1" />
   
        <createTable tableName="A2">
            <column name="ID" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="Type" type="char(1)" >
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey columnNames="ID, Type"
                       constraintName="PK_A2_BRIDGEID_TYPE"
                       tableName="A2" />

        <addForeignKeyConstraint baseColumnNames="ID, Type"
                                 baseTableName="A2"
                                 constraintName="FK_A2_A1_ID_TYPE"
                                 referencedColumnNames="ID, Type"
                                 referencedTableName="A1"/>

        <createTable tableName="B2">
            <column name="ID" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="Type" type="char(1)" >
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey columnNames="ID, Type"
                       constraintName="PK_B2_BRIDGEID_TYPE"
                       tableName="B2" />

        <addForeignKeyConstraint baseColumnNames="ID, Type"
                                 baseTableName="B2"
                                 constraintName="FK_B2_A1_ID_TYPE"
                                 referencedColumnNames="ID, Type"
                                 referencedTableName="A1"/>
    </changeSet>
    
    <changeSet id="someData" logicalFilePath="master.xml" author="olth">
        <sql endDelimiter=";\n">
            <comment>First</comment>

            INSERT INTO A1 ( ID, Type, SomeText )
            VALUES('First', 'A', 'This is the first instance, type A2.');

            INSERT INTO A2 ( ID, Type )
            VALUES('First', 'A');
        </sql>
        <sql endDelimiter=";\n">
            <comment>Second</comment>

            INSERT INTO A1 ( ID, Type, SomeText )
            VALUES('Second', 'B', 'This is the second instance, type B2.');

            INSERT INTO B2 ( ID, Type )
            VALUES('Second', 'B');
        </sql>
    </changeSet>
</databaseChangeLog>

